
@{
    ViewBag.Title = "edit";
}

@using Account.Models;
@model Menus

<form method="post" >
    <input type="hidden" value="@Model.ID" name="ID" />
    <div class="form-group">
        <label for="Name">菜单名称：</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name" />
    </div>
    
    <div class="form-group">
        <label for="Url">URL地址：</label>
        <input type="text" class="form-control" name="Url" value="@Model.Url" />
    </div>
    
    <div class="form-group">
        <label for="Remark">备注</label>
        <input type="text" class="form-control" name="Remark" value="@Model.Remark" />
    </div>
    <div class="form-group">
        <label for="Pid">父级菜单编号</label>
        <input type="text" class="form-control" name="Pid" value="@Model.Pid" />
    </div>

    <a href="javascript:history.go(-1)" class="btn btn-link">返回</a>
    <input type="submit" class="btn btn-primary" value="保存" />
</form>
