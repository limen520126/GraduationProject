
@{
    ViewBag.Title = "Add1";
}
@model Account.Models.UserInfos
   
@using (Html.BeginForm("add1","User",FormMethod.Post,new {enctype="multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.EditorFor(p => p.Name, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Sex)
        <div class="form-group">
            @Html.RadioButtonFor(model => model.Sex, "True") 男
            @Html.RadioButtonFor(model => model.Sex, "False") 女
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Account)
        @Html.EditorFor(p => p.Account, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Account)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Pwd)
        @Html.EditorFor(p => p.Pwd, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Pwd)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Photo)
        <input type="file" name="upPhoto" id="upPhoto" />
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Remark)
        @Html.EditorFor(p => p.Remark, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Remark)
    </div>
    <a href="/user/index" class="btn btn-link">返回</a>
    <input type="submit" class="btn btn-primary" value="保存" />
}

<div style="color:red">
    @Html.ValidationSummary(true);
</div>

