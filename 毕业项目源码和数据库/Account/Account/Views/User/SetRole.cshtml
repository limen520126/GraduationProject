
@{
    ViewBag.Title = "SetRole";
}
@using Account.Models;
@{
    UserInfos user = ViewBag.UserInfo as UserInfos;
    List<Account.Models.Roles> roles = ViewBag.Roles as List<Account.Models.Roles>;
    List<int> RoleIDList = ViewBag.RoleIDList as List<int>;
}
<h2>
    正在为 @user.Name    设置角色
</h2>
<form method="post">
    <input type="hidden" value="@user.ID" name="userID" />
    @foreach (var role in roles)
    {
        <div class="form-group form-check">
            @if (RoleIDList.Contains(role.ID))
            {
                <input type="checkbox" value="@role.ID" class="form-check-input" checked="checked"
                       name="roleids" />
                <label class="form-check-label">@role.Name</label>
            }
            else
            {
                <input type="checkbox" value="@role.ID" class="form-check-input" name="roleids" />
                <label class="form-check-label">@role.Name</label>
            }
        </div>

    }
    <input type="submit" value="保存" class="btn btn-primary" />



</form>


