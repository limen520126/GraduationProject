
@{
    ViewBag.Title = "edit";
}
@using Account.Models;
@model UserInfos
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" value="@Model.ID" name="ID"/>
        
        <div class="form-group">
            <label for="DepartmentID">部门</label>
            <select id="DepartmentID" name="DepartmentID" class="form-control">
                @foreach (var item in ViewBag.departments)
                {
                    if (Model.DepartmentID.Equals(@item.ID))
                    {
                        <option value="@item.ID" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.ID">@item.Name</option>
                    }

                }


            </select>
        </div>


        

        <div class="form-group">
            <label for="Account">账号</label>
            <input type="text" class="form-control" name="Account" value="@Model.Account"/>
        </div>
        
        <div class="form-group">
            <label for="Pwd">密码</label>
            <input type="text" class="form-control" name="Pwd" value="@Model.Pwd"/>
        </div>
        <a href="/user/index" class="btn btn-link">返回</a>
        <input type="submit" class="btn btn-primary" value="保存" />
    </form>

